# MPI Research Project Environment Variables
export PROJECT_ROOT="//wsl.localhost/Ubuntu/home/gazi/wangyl/mpi_research"
export BUILD_DIR="//wsl.localhost/Ubuntu/home/gazi/wangyl/mpi_research/build"
export INSTALL_DIR="//wsl.localhost/Ubuntu/home/gazi/wangyl/mpi_research/install"
export RESULTS_DIR="//wsl.localhost/Ubuntu/home/gazi/wangyl/mpi_research/results"
export NS3_HOME="${NS3_HOME:-$PROJECT_ROOT/ns-3-allinone/ns-3.37}"
export PATH="$INSTALL_DIR/bin:$PATH"
export LD_LIBRARY_PATH="$INSTALL_DIR/lib:$LD_LIBRARY_PATH"
export PYTHONPATH="$PROJECT_ROOT/scripts:$PYTHONPATH"

# Python virtual environment
export VIRTUAL_ENV="//wsl.localhost/Ubuntu/home/gazi/wangyl/mpi_research/venv"
export PATH="$VIRTUAL_ENV/bin:$PATH"

# MPI configuration
export OMPI_ALLOW_RUN_AS_ROOT=1
export OMPI_ALLOW_RUN_AS_ROOT_CONFIRM=1

# Build configuration
export CC=mpicc
export CXX=mpicxx
export CFLAGS="-O3 -march=native"
export CXXFLAGS="-O3 -march=native -std=c++17"

# Optional: Set these if you have specific MPI installations
# export MPI_HOME=/usr/lib/openmpi
# export PATH=$MPI_HOME/bin:$PATH
# export LD_LIBRARY_PATH=$MPI_HOME/lib:$LD_LIBRARY_PATH
